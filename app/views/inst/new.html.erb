<div class='container'>
  <div class='col-md-6 col-md-offset-3'>
    <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  </div>

  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <h1>投稿しましょう！</h1>
    <%= form_for(@post, url: inst_index_path) do |f| %>
      <%= f.file_field :image_url %>
      <%= f.hidden_field :image_url_cache %>
      <br>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to '一覧に戻る', inst_index_path ,class: 'btn btn-default btn-block'%>
    </div>
  </div>
</div>
