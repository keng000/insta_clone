<div class='container'>
  <div class='col-md-6 col-md-offset-3'>
    <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <center><h1>編集画面</h1></center>
    <center>現在の写真</center>
  </div>
  <div class='row'>
    <div class='wrap col-md-6 col-md-offset-3'>
      <center><%= image_tag @post.image_url %></center>
      <%= form_for(@post, url: inst_path) do |f| %>
        <%= f.file_field :image_url %>
        <%= f.hidden_field :image_url_cache %>
        <br>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      <% end %>
    <%= link_to '一覧に戻る', inst_index_path ,class: 'btn btn-default btn-block'%>
    </div>
  </div>
</div>
