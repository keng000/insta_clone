<div class="container">
  <div class="page-default col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
<h2>サインアップ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label '名前' %>
    <%= f.text_field :name, class: "form-control", placeholder: "名前",autofocus: true %>
  </div>
  <br>
  <div class="field">
    <%= f.label 'メールアドレス' %><br />
    <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス"%>
  </div>
  <br>
  <div class="field">
    <%= f.label 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上のパスワード)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off" , placeholder: "パスワード" %>
  </div>
  <br>
  <div class="field">
    <%= f.label 'パスワード（確認）' %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" , placeholder: "パスワード（確認）" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up" , class: 'btn btn-info'%>
  </div>
<% end %>
  <br>
<%= render "devise/shared/links" %>

</div>
</div>
